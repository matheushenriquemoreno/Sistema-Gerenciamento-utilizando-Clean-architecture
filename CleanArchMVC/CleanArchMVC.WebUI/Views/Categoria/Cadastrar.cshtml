@model CleanArchMVC.Application.DTOS.CategoriaDTO


@{
    var metodo = Model != null && Model.Id > 0 ? new { tipo = "Editar", acao = "Editar" } : new { tipo = "Cadastro De", acao = "Cadastrar" };
}

<div class="container col-10 p-3">

    <div class="text-center">
        <h2>@metodo.tipo Categoria </h2>
    </div>
                    <hr />
    <div class="row  bg-light  shadow rounded-3 border p-2">
        <form asp-action="@metodo.acao" method="post">
            <div class="">

                <div class="form-floating">
                    <input asp-for="Nome" class="form-control" id="floatingPassword" placeholder="Password">
                    <label for="floatingPassword">Nome Categoria</label>
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group mt-3 text-end">
                    <div class="col-md-12 ">
                        <input type="submit" value="@metodo.acao" class="btn btn-outline-danger" />
                        <a asp-action="Index" class="btn btn-outline-info">Voltar</a>
                    </div>
                </div>
            </div>
        </form>
    </div>


</div>

