@model IEnumerable<CleanArchMVC.Application.DTOS.CategoriaDTO>

@{
    ViewData["Title"] = "Categorias de produtos";
}

<div>
    <h2>@ViewData["Title"]</h2>
</div>
<hr />
<div class="row">
    <div class="col-md-12">
        <div>
            <div class="pull-right">
                <a asp-action="Cadastrar" class="btn btn-primary">
                    <i class="bi bi-plus"></i>
                    <span title="Register New" class="fas fa-plus"></span> Adicionar nova categoria
                </a>
            </div>
        </div>
    </div>
</div>
<br />
<div class="panel panel-default">
    <table class="table table-striped ">
        <thead >
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                   Ações
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>

                    <td>
                        <div class="btn-group">
                            <button type="button" class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                                Ações
                            </button>

                            <ul class="dropdown-menu dropdown-menu-dark ">
                                <li>
                                    <a  asp-action="Editar" asp-route-id="@item.Id" title="" class="dropdown-item d-flex gap-2 align-items-center">
                                        <i class="bi bi-sliders"></i>
                                        Editar
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a asp-action="Delete" asp-route-id="@item.Id" title="Delete" class="dropdown-item d-flex gap-2 align-items-center">
                                        <i class="bi bi-x-square"></i>
                                        Excluir
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>